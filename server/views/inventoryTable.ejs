<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Inventory Table</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    
    <link href="stylesheet/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Bootstrap CSS -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .search-container {
            margin-bottom: 20px;
        }
        .action-buttons .btn {
            margin-right: 5px;
        }
        .table-responsive {
            overflow-x: auto;
        }
        .add-property-btn {
            white-space: nowrap;
         }
  
    </style>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%-include("layout/sidebar.ejs")%>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%-include("layout/topbar.ejs")%>

                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                 

                
                    <!-- Inventory Table -->
                    <div class="container mt-4">
                        <h2 class="mb-4">Property Management</h2>
                        <hr style="color: grey;margin-bottom:40px;">
                        <div class="row search-container">
                            <div class="col-md-8 mb-2">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                    <input type="text" class="form-control" placeholder="Search properties..." id="searchInput">
                                </div>
                            </div>
                            <div class="col-md-4 mb-2 text-md-end">
                                <button class="btn btn-dark add-property-btn shadow-sm">
                                    <a href="/add-property" style="text-decoration: none;color: white;"><i class="fas fa-plus me-1"></i> Add Property</a>
                                 </button>
                            </div>
                        </div>
                
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-info">
                                    <tr>
                                        <th>No</th>
                                        <th>Title</th>
                                        <th>Property Type</th>
                                        <th>Room Type</th>
                                        <th>Guests</th>
                                        <th>Bedrooms</th>
                                        <th>Beds</th>
                                        <th>Bathrooms</th>
                                        <th>Price</th>
                                        <th>Created At</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody >
                                    <% data.forEach((property,idx) => { %>
                                    <tr>
                                        <td class="fw-bold text-center" style="color: rgb(0, 102, 111);"><%= idx+1 %></td>
                                        <td><%= property.title %></td>
                                        <td><%= property.propertyType %></td>
                                        <td><%= property.roomType %></td>
                                        <td><%= property.capacity.guests %></td>
                                        <td><%= property.capacity.bedrooms %></td>
                                        <td><%= property.capacity.beds %></td>
                                        <td><%= property.capacity.bathrooms %></td>
                                        <td>â‚¹<%= property.price.toLocaleString() %></td>
                                        <td><%= new Date(property.createdAt).toLocaleDateString() %></td>
                                        <td class="action-buttons">
                                            <a href="/inventoryTable/view/<%=property._id%>" style="text-decoration:none;list-style:none;">  <button class="btn btn-sm btn-light text-info edit-btn" title="View">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </a>
                                        <a href="/inventoryTable/edit/<%=property._id%>" style="text-decoration:none;list-style:none;">  <button class="btn btn-sm btn-light text-success view-btn" title="Edit">
                                           <i class="fas fa-edit"></i>
                                        </button>
                                    </a> 
                                    <a href="/inventoryTable/delete/<%=property._id%>" style="text-decoration:none;list-style:none;">
                                            <button class="btn btn-sm btn-light text-danger delete-btn" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                           </a> 

                                        </td>
                                    </tr>
                                    <% }) %>
                                    <!-- Additional rows would be rendered here in a loop -->
                                </tbody>
                            </table>
                        </div>
                
                        <!-- Pagination would go here if needed -->
                    </div>

                </div>
                <!-- /.container-fluid -->


            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%-include("layout/footer.ejs")%>

            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

 
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

</body>

</html>